<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="@dimen/cast_image_width_height"
        android:layout_height="@dimen/cast_image_width_height"
        android:id="@+id/cast_image"
        android:scaleType="centerCrop"
        android:layout_marginRight="@dimen/cast_image_margin_left_right"
        android:layout_marginLeft="@dimen/cast_image_margin_left_right"
        />
    <com.example.punit.popularmovies.Fonts.CustomBoldTextView
        android:layout_width="@dimen/cast_image_width_height"
        android:layout_height="@dimen/cast_name_txt_height"
        android:id="@+id/cast_name"
        android:textSize="16sp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginRight="@dimen/cast_image_margin_left_right"
        android:layout_marginLeft="@dimen/cast_image_margin_left_right"/>

</LinearLayout>